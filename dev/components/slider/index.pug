include ../global.pug
include data.pug

mixin slider(data)
  +b.slider(data-slider=data.slider class=data.style)
    +e.controls(data-slider-controls)
      +b.BUTTON.arrow._prev(data-slider-controls-prev)
        +svg({
          name: 'ico-arrow'
        })
      +b.BUTTON.arrow._next(data-slider-controls-next)
        +svg({
          name: 'ico-arrow'
        })
    +e.UL.slides(data-slider-slides)
      block
      
mixin sliderBanner
  +slider({
    slider: 'banner',
    style: '_banner'
  })
    +e.LI.slide
      img(src=global.paths.pictures+'banner.jpg')
    +e.LI.slide
      img(src=global.paths.pictures+'banner.jpg')
        
