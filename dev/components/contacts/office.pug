include ../global.pug
include data.pug

include ../gallery/index.pug

mixin office(hidden)
  +b.office(data-print-content data-more-action class=(hidden == true) ? '' : 'show-more')
    +e.header
      +e.label
        h4 Офис “Купчино”
      +e.info
        +e.block
          +e.title
            span Купчино
          p метро “Московская”
        +e.block
          +e.caption
            +b.I.ico
              +svg({
                name: 'ico-place'
              })
            span Адрес:
          p. 
            Санкт-Петербург,<br>
            ул. Типанова, д. 3
        +e.block
          +e.caption
            +b.I.ico
              +svg({
                name: 'ico-time'
              })
            span Режим работы:
          p. 
            Пн - Пт: 10:00 - 21:00<br>
            Сб: 11:00 - 19:00<br>
            Вс: 11:00 - 18:00
            
        +e.block
          +e.caption
            +b.I.ico
              +svg({
                name: 'ico-tel'
              })
            span Телефон
          p
            span <strong>+7 (812) 386-06-86</strong> (доб. 317)
      +e.more
        - if (hidden)
          +b.BUTTON.button._highlight._size-wide(data-toggle="Свернуть" data-more)
            span Подробнее
        - else
          +b.BUTTON.button._highlight._size-wide(data-toggle="Подробнее" data-more)
            span Свернуть
          
    +e.content
      +e.title
        span Купчино
      +e.info._full
        +e.gallery
          +galleryOffice
        +e.description
          +e.UL.description-list
            +e.LI.line
              +e.caption
                +b.I.ico
                  +svg({
                    name: 'ico-place'
                  })
                span Адрес:
              p Санкт-Петербург, ул. Типанова, д. 3
              
            +e.LI.line
              +e.caption
                +b.I.ico
                  +svg({
                    name: 'ico-place'
                  })
                span Режим работы:
              p. 
                Офис расположен рядом с помещением "Петербургские аптеки" В 3-х минутах 
                от выхода из метро на улицу Типанова (выход на Московскую площадь со стороны фонтанов)
            +e.LI.line
              +e.caption
                +b.I.ico
                  +svg({
                    name: 'ico-time'
                  })
                span Режим работы:
              p. 
                Пн - Пт: 10:00 - 21:00<br>
                Сб: 11:00 - 19:00<br>
                Вс: 11:00 - 18:00
                
          span Возможен перерыв в работе не более 15 минут
          
        +e.text
          p. 
            Green Card является не единым соглашением, а совокупностью двусторонних 
            договоров между странами-участницами, каждая из которых представлена своим Национальным Бюро.
            
        +e.footer
          p Специалист по страхованию финским визам и загранпаспортам:
          +e.A.tel(href="tel:78123860686") +7 (812) 386-06-86 <strong>(доб. 317)</strong>
          +e.actions
            +b.BUTTON.link(data-map) 
              +b.I.ico
                +svg({
                  name: 'ico-map'
                })
              span Посмотреть на карте
            +b.BUTTON.link(data-print) 
              +b.I.ico
                +svg({
                  name: 'ico-doc'
                })
              span Распечатать
        
