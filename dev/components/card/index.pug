                                +svg({
                                  name: 'ico-plain'
                                })  
                              +e.path-point(data-code="HKT")
                              +e.path-point(data-code="SVO")
                        +e.date
                          +e.SPAN.time 11:00
                          p <strong>Вьетнам</strong> 9 Марта, сб
                      
              
        +e.block
          +ticket
        
        +b.A.button._highlight._full._size-l(href="#") Еще 18 вариантов
  
