            +e.LI.cell
              +e.SPAN.label Тип номера:
              +e.SPAN.value DBL
            +e.LI.cell
              +e.SPAN.label Туроператор:
              +e.DIV.value._image
                img(src=global.paths.pictures+'operators/vit-tour.png')
                
          +b.UL.info_horizontal
            +e.LI.cell
              +e.SPAN.label Авиакомпания:
