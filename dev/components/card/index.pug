include ../global.pug
include data.pug

include rating.pug
include ticket.pug
include details.pug
include ../gallery/index.pug

mixin cardSmall(data)
  +b.card(class=data.hot ? '_hot' : '')
    +e.image
      img(src=global.paths.pictures+data.image)
    +e.info
      +b.SPAN.caption._size-s= data.title
      +e.text!= data.text
        
      +e.footer
        +b.price
          +e.value._old
            span= toPrice(data.price) + 'р'
          +e.value
            span= toPrice(data.price) + 'р'
        +b.A.button(href="#card")
          span Подробнее



mixin cardSearch(data)
  +b.card._search(data-more-action class=data.showing ? 'show-more' : '')
    +e.main
      +e.image
        img(src=global.paths.pictures+data.image)
      +e.info
        +e.info-block._info
          +e.header
            +rating(3)
            +e.SPAN.location Турция, Стамбул
            +b.SPAN.caption._size-s Grand Liza 3*
            
          +b.UL.info
            +e.LI.cell
              +e.SPAN.label Вылет из:
              +e.SPAN.value Санкт-Петербург
            +e.LI.cell
              +e.SPAN.label Гости:
              +e.SPAN.value 2 (взрослых)
              
          +e.text._size-s
            p Купите <a href="#">Online</a> или в <a href="#">офисе</a>
            p Купить тур в <a href="#"><strong>рассрочку</strong></a>
            
        +e.info-block._price
          +b.price._size-l
            +e.value
              span= toPrice(12000) + 'р'
            +e.value._old
              span= toPrice(15635) + 'р'
          
          - if (data.showing)
            +b.BUTTON.button._highlight(data-more data-toggle="Подробнее")
              span Свернуть
              
          - else
            +b.BUTTON.button._highlight(data-more data-toggle="Свернуть")
              span Подробнее
              
    +e.UL.details(data-more)
      +details
      +details
      +details
      +e.A.all.button(href="#all-tours") Все туры в этот отель
      
mixin cardHotel
