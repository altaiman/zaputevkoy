//- includes
include components/head/index.pug
include components/common/index.pug
include components/svg/index.pug

include components/header/index.pug
include components/breadcrumbs/index.pug

include components/pages/index.pug
include components/card/index.pug
include components/sidebar/index.pug
include components/modal/index.pug
include components/tabs/index.pug

include components/footer/index.pug
include components/footer/scripts.pug

//- end includes

//- variables page 
- 
	pageSettings = {
		title: 'Главная'
	}

doctype html
html(lang=global.lang)
	+head(pageSettings)
	+b.BODY.page
		+header({ search: true })
		
		+e.MAIN.content
			+b.SECTION.section
				+e.container.container
					+e.header
						+breadcrumbs(['Горящие туры'])
						+b.H2.caption Горящие туры
					
				+e.container.container._flex
					+e.block._main
						+e.line._top
							+e.block
								+pages({ link: false })
							
							+e.block._sort
								+e.SPAN.caption Сортировать:
								+b.select._field._inline
									select
										option(value="0") От дешевых к дорогим
										option(value="1") От дорогих к дешевым
										option(value="2") По популярности
							
						+b.loading
							+e.SPAN.value 0
							+e.plain
								+svg({
									name: 'loading'
								})
								
						+b.items._triple.loading-process
							each item in cardsData
								+cardSmall({
									title: item.title,
									image: item.image,
									price: item.price,
									text: item.text,
									hot: true
								})
						
					+e.block._sidebar
						+sidebarFilter
						+sidebarForm
						+sidebarSubscribe
									
		+footer
		
		+e.modals
			+modalOrder
			
		+scripts
